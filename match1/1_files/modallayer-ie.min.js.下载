ModalLayer.__proto__.getModalLayerByDom=function(node){let modalIndex=null;let classList=node.classList;let indexClass='modal-layer-index-';while(node.getAttribute('class').indexOf(indexClass)<0&&node!==document){classList=node.classList;node=node.parentNode;}
